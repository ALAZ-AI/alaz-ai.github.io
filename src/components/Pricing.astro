<script>
    function initPricingToggle() {
        const toggle = document.getElementById('billing-toggle') as HTMLInputElement;
        const monthlyLabel = document.getElementById('monthly-label') as HTMLElement;
        const yearlyLabel = document.getElementById('yearly-label') as HTMLElement;
        const priceAmounts = document.querySelectorAll('.price-amount');
        const pricePeriods = document.querySelectorAll('.price-period');
        const yearlySavings = document.querySelectorAll('.yearly-savings');

        if (!toggle) return;

        function updatePricing() {
            const isYearly = toggle.checked;
            
            // Update labels
            monthlyLabel.style.color = isYearly ? '#9CA3AF' : '#FFFFFF';
            yearlyLabel.style.color = isYearly ? '#FFFFFF' : '#9CA3AF';
            
            // Update prices
            priceAmounts.forEach(amount => {
                const element = amount as HTMLElement;
                const monthlyPrice = element.dataset.monthly;
                const yearlyPrice = element.dataset.yearly;
                
                if (monthlyPrice && yearlyPrice) {
                    element.textContent = isYearly ? yearlyPrice : monthlyPrice;
                }
            });
            
            // Update periods
            pricePeriods.forEach(period => {
                const element = period as HTMLElement;
                element.textContent = isYearly ? ' / month (billed yearly)' : ' / month';
            });
            
            // Show/hide yearly savings
            yearlySavings.forEach(saving => {
                const element = saving as HTMLElement;
                element.style.display = isYearly ? 'block' : 'none';
            });
        }

        // Initialize
        updatePricing();
        
        // Add click handler to the toggle container
        const toggleContainer = toggle.parentElement;
        if (toggleContainer) {
            toggleContainer.addEventListener('click', (e) => {
                e.preventDefault();
                toggle.checked = !toggle.checked;
                updatePricing();
            });
        }
    }

    // Add card hover enhancements
    function enhanceCards() {
        const cards = document.querySelectorAll('.card-hover');
        
        cards.forEach(card => {
            card.addEventListener('mouseenter', () => {
                const cardElement = card as HTMLElement;
                cardElement.style.transform = 'translateY(-8px)';
            });
            
            card.addEventListener('mouseleave', () => {
                const cardElement = card as HTMLElement;
                cardElement.style.transform = 'translateY(0)';
            });
        });
    }

    document.addEventListener('DOMContentLoaded', () => {
        initPricingToggle();
        enhanceCards();
    });
</script>

